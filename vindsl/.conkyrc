	color0 = 'White',--FFFFFF
	color1 = 'Ivory',--FFFFF0
	color2 = 'Ivory2',--EEEEE0
	color3 = 'Ivory3',--CDCDC1
	color4 = 'Tan1',--FFA54F
	color5 = 'Tan2',--EE9A49
	color6 = 'Gray',--7E7E7E
	color7 = 'AntiqueWhite4',--8B8378
	color8 = 'DimGray',--696969
